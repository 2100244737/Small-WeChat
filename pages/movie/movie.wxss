}
.hot-movie {
    padding: 20px;
}
.hot-movie .title {
        font-size: 16px;
    padding-bottom: 20px;
}
.hot-movie .movie-content {
    display: flex;
    justify-content: space-between;
    flex-wrap:wrap;
}
.hot-movie .movie-content .img {
    display: block;
    width:100%;
    height: 260rpx;
}
.hot-movie .movie-content .title {
    line-height: 1.25;
    margin-top: 10rpx;
    font-size: 12px;
}
.movie-content .movie-item {
    width: 210rpx;
    height: 340rpx;
    text-align: center;
    color: #888;
    font-size: 12px;
    margin-top: 20rpx;
}