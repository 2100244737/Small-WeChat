/* pages/movieDtails/movieDtails.wxss */
.movie-details .video {
    display: block;
    width: 100%;
    height: 500rpx;
}
.play-list {
    display: flex;
    flex-wrap:wrap;
    padding: 20px ;
}
.active {
    border: 1rpx solid #409eff !important;
}
.play-list .btn {
  display:flex;
  align-items: center;
  justify-content: center;
    width: 210rpx;
    margin: 0;
    padding:10px 0;
    margin-right: 10rpx;
    margin-top: 20rpx;
    border-radius: 10px;
    font-size: 12px;
    text-align: center;
    line-height: 1;
    border: 1rpx solid #e0e0e0;
    color:#888;
}
 .btn:nth-child(3n) {
  margin-right: 0;
}
.douban-desc {
    padding: 0 20px 20px 20px;
}

.douban-desc .row-one {
    display: flex;
    justify-content:space-between;
}
.row-one .title {
    font-size: 16px;
}
.row-one .desc {
    color:#888;
    font-size: 12px;
}
.douban {
    color:#ff6700;
    font-size: 12px;
    padding-top: 15rpx;
}
.desc-content {
    color: #888;
    line-height: 1.5;
    font-size: 12px;
    margin-top: 20rpx;
}
.guess {
    padding: 0 20px 20px 20px;
}
.guess .title {
    font-size: 16px;
    font-weight: 500;
}
.guess-content .item {
    display: flex;
    margin-top: 20px;
}
.item-left {
    width: 226rpx;
    height: 260rpx;
    margin-right: 20rpx;
}
.item-left .img{
    display: block;
    width: 226rpx;
    height: 260rpx;
}
.item-right {
    width: 424rpx;
}
.item-right .title {
    font-size: 16px;
}
.item-right .little-title {
    font-size: 12px;
    color:#888;
    margin-top: 20rpx;
}