/* pages/articleDetalls/articleDetalls.wxss */
@import '../../wxParse/wxParse.wxss';
.img-wrap .img {
    display:block;
    width: 100%;
    height: 400rpx;
    border-bottom: 1rpx solid #f1f1f1;
}
.author-mgs {
    display: flex;
    padding: 15px;
    align-items: center;
    font-size: 13px;
    font-weight: 300;
}
.author-mgs .avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin-right: 10px;
}
.author-mgs  .author{
    margin-right: 10px;
}
.author-mgs .publish{
 color:#888;
    font-size: 12px;
    margin-right: 20px;
}
.author-mgs .day{
    font-size: 12px;
    color:#666;
}
.article-details .title {
    font-size: 16px;
    padding: 0 20px 20px 20px;
}
.menu {
    display: flex;
    justify-content: flex-end;
    position: relative;
    height: 80rpx;
}
.menu::after {
    content: "";
    position: absolute;
    left: 20px;
    right: 20px;
    top: 50%;
    height: 1rpx;
    background: #888;
    transform: translateY(-50%)
}
.menu .iconfont {
    width: 80rpx;
    height: 80rpx;
    border-radius:50%;
    padding: 0;
    margin: 0;
    margin-right: 20px;
    text-align: center;
    line-height: 80rpx;
    color: #fff;
    font-size: 22px;
    z-index: 2;
}
.iconfont:first-child{
    background: #d9d9d9;
}
.iconfont:nth-child(2) {
    background: #4db1a1;
}
.content {
    padding: 20px;
}